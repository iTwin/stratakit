{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "internal/tsconfig.json",
	"compilerOptions": {
		"rootDir": "src",
		"baseUrl": ".",
		"module": "ES2022",
		"moduleResolution": "Bundler",
		"noEmit": false,
		"declaration": true,
		"emitDeclarationOnly": true,
		"types": ["./types.d.ts"]
	},
	"include": ["src", "types.d.ts"],
	"exclude": ["node_modules", "dist/**/*"]
}
