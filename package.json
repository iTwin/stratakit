{
	"name": "kiwi",
	"private": true,
	"version": "0.0.0",
	"description": "Monorepo for the kiwi design system",
	"scripts": {
		"build": "pnpm --filter=@itwin/test-app build",
		"dev": "pnpm --filter=@itwin/test-app dev",
		"format": "pnpm --recursive --no-bail format",
		"lint": "pnpm --recursive --no-bail lint",
		"lint:copyright": "node scripts/copyrightLinter.js",
		"prettier": "prettier . '!**/*.{js,jsx,ts,tsx}' --check",
		"test": "pnpm --filter=@itwin/test-app test"
	},
	"devDependencies": {
		"@biomejs/biome": "1.8.3",
		"fast-glob": "^3.3.2",
		"lefthook": "^1.7.11",
		"prettier": "3.3.3"
	},
	"engines": {
		"node": ">=20.16.0"
	},
	"packageManager": "pnpm@9.6.0"
}
