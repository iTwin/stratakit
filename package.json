{
	"name": "kiwi",
	"private": true,
	"type": "module",
	"version": "0.0.0",
	"description": "Monorepo for the kiwi design system",
	"scripts": {
		"build": "pnpm --filter=\"./packages/**\" --filter=\"./apps/**\" build",
		"dev": "npm run dev:app & npm run dev:ts &",
		"dev:app": "pnpm --filter=@itwin/test-app dev",
		"dev:ts": "pnpm --filter=@itwin/kiwi-react dev",
		"format": "biome format .",
		"lint": "biome lint .",
		"lint:copyright": "tsx internal/copyright-linter.ts",
		"prettier": "prettier . '!**/*.{js,jsx,ts,tsx,cjs,cts,mjs,mts,css,json,jsonc}' --check",
		"test": "pnpm --filter=@itwin/test-app test"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@types/node": "^22.7.6",
		"fast-glob": "^3.3.2",
		"internal": "workspace:*",
		"lefthook": "^1.7.22",
		"prettier": "3.3.3",
		"tsx": "^4.19.1"
	},
	"engines": {
		"node": ">=20.16.0"
	},
	"packageManager": "pnpm@9.12.2",
	"pnpm": {
		"overrides": {
			"cookie@<0.7.0": ">=0.7.0"
		}
	}
}
