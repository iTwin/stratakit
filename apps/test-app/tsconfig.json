{
	"include": [
		"**/*.ts",
		"**/*.tsx",
		"**/.server/**/*.ts",
		"**/.server/**/*.tsx",
		"**/.client/**/*.ts",
		"**/.client/**/*.tsx",
		".react-router/types/**/*"
	],
	"extends": "internal/tsconfig.json",
	"compilerOptions": {
		"types": ["@react-router/node", "vite/client"],

		"baseUrl": ".",
		"paths": {
			"~/*": ["./app/*"],
			"@itwin/itwinui-react-internal/*": [
				"./node_modules/@itwin/itwinui-react/*"
			]
		},
		"rootDirs": [".", "./.react-router/types"],

		// Use TSX source directly for better IDE experience.
		"customConditions": ["@kiwi/source"]
	}
}
