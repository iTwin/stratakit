---
// This file loads StrataKit styles (i.e. tokens) and must be placed early in the <head>.
// Uses workaround to prevent FOUC when StrataKit styles are loading.
---

<script type="module" blocking="render">
	document.documentElement.dataset.loading = "true";
	setTimeout(() => {
		delete document.documentElement.dataset.loading;
	}, 2000);
</script>
<style is:inline>
	html[data-loading] {
		opacity: 0;
	}
</style>

<script>
	import { unstable_loadStyles } from "@stratakit/foundations";
	unstable_loadStyles();
	delete document.documentElement.dataset.loading;
</script>
